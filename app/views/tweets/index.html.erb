<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.user.username %></td>
        <td><%= tweet.message.html_safe %></td>
        <td><%= link_to 'Show', tweet, class: 'btn btn-primary'%></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path, class: 'btn btn-primary' %>
